<%- include('../_layouts/adminheader') %>

	<div class="container mb-4">
		<h1 class="mb-4">Chỉnh sửa bài đăng</h1>
		<form action="/admin/<%= article.id %>?_method=PUT" method="POST"" method="POST">			
			<div class="form-group">
				<label for="title" > Tiêu đề</label>
				<input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
			</div>

			<div class="form-group">
			  <label for="description">Tóm tắt</label>
			  <textarea required name="description" id="description" class="form-control"><%= article.description %></textarea>
			</div>

			<div class="form-group">
			  <label for="markdown">Nội dung</label>
			  <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
			</div>

			<div class="custom-file mb-4">
			  <input type="file" class="custom-file-input" id="imageInput">
			  <label class="custom-file-label" for="imageInput" name="image">Ảnh</label>
			</div>
			<div class="form-group">
			  <label for="markdown">Chú thích ảnh</label>
			  <textarea required name="cmtImage" id="cmtImage" class="form-control"><%= article.cmtImage %></textarea>
			</div>
			<a href="/admin/articles" class="btn btn-secondary">Thoát</a>
			<button type="submit" class="btn btn-primary">Cập nhật</button>
		</form>
	</div>

<%- include('../_layouts/adminfooter') %>